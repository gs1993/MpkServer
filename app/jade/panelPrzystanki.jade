.panelPrzystanki.panel
  .panelPrzystanki__title Panel Zarządzania Przystankami
  .panelPrzystanki__wrapper
    .panelPrzystanki__content
      .panelPrzystanki__content__Title Lista Przystanków
      .panelPrzystanki__content__Filtr
        .panelPrzystanki__content__Filtr__item
          input(placeholder="Szukaj przystanku")
        .panelPrzystanki__content__Filtr__item
          input(placeholder="Szukaj ulicy")
        .panelPrzystanki__content__Filtr__item
          select(multiple).js-example-placeholder-multiple.linie

            option
            - for (var i=1;i<20;i++)
              option=i

          //input(placeholder="Typ autobusu")
        .panelPrzystanki__content__Filtr__item.check
          input(type="checkbox")#czyprzystanekmabiletomat
          label(for="czyprzystanekmabiletomat")
          p Biletomat
        .panelPrzystanki__content__Filtr__item.check
          input(type="checkbox")#czyprzystanekmakiosk
          label(for="czyprzystanekmakiosk")
          p Kiosk
      .panelPrzystanki__contentList

        .panelList
          .panelList__header
            .panelList__headeritemName Nazwa przystanku
            .panelList__headeritemUlica Ulica
            .panelList__headeritemBiletomat Biletomat
            .panelList__headeritemKiosk Kiosk
            .panelList__headeritemnavigation Szczegóły
          .panelPrzystanki__list.panelList__content#GetBusstopList
            .panelList__item
              .panelList__itemName Przykładowa
              .panelList__itemUlica Przykładowa
              .panelList__itemBiletomat
                .fa.fa-times-circle-o
              .panelList__itemKiosk
                .fa.fa-times-circle-o
              a(href="#/bus/show").panelList__navigation Zobacz

    .panelPrzystanki__navigation
      a(href="#/busstop/add").panelPrzystanki__navigation__item Dodaj Przystanek
  a(href="#/")
    span.panelPrzystanki__close
      span.panelPrzystanki__icon.fa.fa-times